<mvc:View controllerName="pub.pubsample.controller.Employee"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid">
    <Page showHeader="false">
        <VBox>
            <HBox justifyContent="SpaceBetween">
                <Breadcrumbs currentLocationText="사원프로파일" separatorStyle="GreaterThan">
                    <Link text="인사" width="auto" />
                </Breadcrumbs>
                <HBox>
                    <Button type="Transparent" icon="sap-icon://crm-service-manager" text="인사기록부 출력" />
                    <Button type="Transparent" icon="sap-icon://print" text="프린트" />
                    <Button type="Transparent" icon="sap-icon://sys-help" text="도움말" />
                </HBox>
            </HBox>
            <HBox>
                <VBox class="customBox" width="{= ${/navigation/width}}">
                    <HBox justifyContent="SpaceBetween">
                        <SearchField placeholder="사번 또는 성명" visible="{= ${/navigation/isShow}}" />
                        <Switch state="true" customTextOn="닫기" customTextOff="열기" change=".onToggleNavigation"/>
                    </HBox>
                    <IconTabBar selectedKey="list" expandable="false" visible="{= ${/navigation/isShow}}">
                        <layoutData>
                            <FlexItemData growFactor="1"/>
                        </layoutData>
                        <items>
                            <IconTabFilter text="사원리스트" key="list">
                                <SegmentedButton width="100%" selectedKey="10">
                                    <items>
                                        <SegmentedButtonItem text="전체" key="all" />
                                        <SegmentedButtonItem text="재직자" key="10" />
                                        <SegmentedButtonItem text="퇴직자" key="20" />
                                    </items>
                                </SegmentedButton>
                                <ScrollContainer height="700px" horizontal="false" vertical="true">
                                    <List items="{path: '/navigation/search/results'}">
                                        <CustomListItem type="Active" press=".onClickEmployeeCard">
                                            <HBox class="customBox">
                                                <VBox width="20%" justifyContent="Center" alignItems="Center">
                                                    <Image src="https://i1.wp.com/jejuhydrofarms.com/wp-content/uploads/2020/05/blank-profile-picture-973460_1280.png?ssl=1" height="35px" width="35px" />
                                                </VBox>
                                                <VBox>
                                                    <HBox justifyContent="SpaceBetween">
                                                        <Text text="{Ename} {Todo1}/{Todo2}" />
                                                        <core:Icon visible="{= ${Manager}}" src="sap-icon://manager" />
                                                    </HBox>
                                                    <HBox>
                                                        <Label text="소속" />
                                                        <Label text="{Todo3}" />
                                                    </HBox>
                                                    <HBox>
                                                        <Label text="근속" />
                                                        <Label text="{Todo4}" />
                                                    </HBox>
                                                    <HBox>
                                                        <Label text="직무" />
                                                        <Label text="{Todo5}" />
                                                    </HBox>
                                                </VBox>
                                            </HBox>
                                        </CustomListItem>
                                    </List>
                                </ScrollContainer>
                            </IconTabFilter>
                            <IconTabFilter text="조직도" key="tree">
                                <ScrollContainer width="100%" height="80vh" vertical="true">
                                    <Tree id="OrganizationTree" mode="SingleSelectMaster" items="{path: '/navigation/treeData'}">
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                        <StandardTreeItem icon="{ref}" title="{title}"/>
                                    </Tree>
                                </ScrollContainer>
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </VBox>
                <VBox height="900px" width="{= ${/employee/width}}">
                    <VBox class="customBox">
                        <grid:CSSGrid gridTemplateColumns="1fr 6fr" gridGap="8px">
                            <VBox justifyContent="Center" alignItems="Center">
                                <layoutData>
                                    <grid:GridItemLayoutData gridRow="span 5" />
                                </layoutData>
                                <Image src="https://i1.wp.com/jejuhydrofarms.com/wp-content/uploads/2020/05/blank-profile-picture-973460_1280.png?ssl=1" height="80px" width="80px"/>
                                <Button type="Transparent" icon="sap-icon://picture" text="사진 변경" />
                            </VBox>
                            <grid:CSSGrid items="{path: '/employee/header/baseinfo'}" gridTemplateColumns="3fr 1fr 3fr 1fr 3fr" gridGap="8px">
                                <Label text="{data}"/>
                            </grid:CSSGrid>
                        </grid:CSSGrid>
                        <VBox>
                            <HBox justifyContent="SpaceAround" items="{path: '/employee/header/timeline'}">
                                <VBox width="20%" alignItems="Center">
                                    <core:Icon src="sap-icon://circle-task-2" />
                                </VBox>
                            </HBox>
                            <HBox justifyContent="SpaceAround" items="{path: '/employee/header/timeline'}">
                                <VBox width="20%" alignItems="Center">
                                    <core:Icon src="sap-icon://employee" />
                                    <Text text="{label}" />
                                    <Text text="{data}" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>
                    <HBox class="customBox">
                        <ToggleButton id="baseButton" text="기본" pressed="true" press=".onToggleProfile"/>
                        <ToggleButton id="actionButton" text="발령" press=".onToggleProfile"/>
                        <ToggleButton id="privateButton" text="신상" press=".onToggleProfile"/>
                    </HBox>
                    <VBox visible="{/employee/base/isShow}">
                        <VBox class="customBox">
                            <HBox justifyContent="SpaceBetween">
                                <Title level="H2" text="추가정보"/>
                            </HBox>
                            <grid:CSSGrid items="{path: '/employee/base/extinfo1'}" gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="8px">
                                <Label text="{data}"/>
                            </grid:CSSGrid>
                        </VBox>
                        <VBox class="customBox">
                            <HBox justifyContent="SpaceBetween">
                                <Title level="H2" text="신상"/>
                            </HBox>
                            <grid:CSSGrid items="{path: '/employee/base/extinfo2'}" gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="8px">
                                <Label text="{data}"/>
                            </grid:CSSGrid>
                        </VBox>
                    </VBox>
                    <VBox visible="{/employee/action/isShow}">
                        <VBox class="customBox">
                            <HBox justifyContent="SpaceBetween">
                                <Title level="H2" text="발령정보"/>
                            </HBox>
                            <table:Table id="actionTable" class="data-algin-center" width="100%" visibleRowCount="{/employee/action/rowcount}" rows="{/employee/action/list}" selectionMode="None" columns="{path: '/employee/action/listheader'}">
                                <table:columns>
                                    <table:Column width="{width}" filterProperty="{property}" sortProperty="{property}" template="{property}">
                                        <Label text="{label}"/>
                                    </table:Column>
                                </table:columns>
                            </table:Table>
                        </VBox>
                    </VBox>
                    <VBox visible="{/employee/private/isShow}">
                        <VBox class="customBox">
                            <HBox justifyContent="SpaceBetween">
                                <Title level="H2" text="주소정보"/>
                                <HBox>
                                    <Button type="Transparent" icon="sap-icon://edit" text="수정" press=".openModifyAddressDialog" />
                                    <Button type="Transparent" icon="sap-icon://add" text="추가" press=".openAddressDialog" />
                                    <Button type="Transparent" icon="sap-icon://less" text="삭제" press=".onDeleteAddress" />
                                </HBox>
                            </HBox>
                            <table:Table id="addressTable" class="data-algin-center" width="100%" visibleRowCount="{/employee/private/rowcount}" rows="{/employee/private/list}" columns="{path: '/employee/private/listheader'}">
                                <table:columns>
                                    <table:Column width="{width}" filterProperty="{property}" sortProperty="{property}" template="{property}">
                                        <Label text="{label}"/>
                                    </table:Column>
                                </table:columns>
                            </table:Table>
                        </VBox>
                        <VBox class="customBox">
                            <HBox justifyContent="SpaceBetween">
                                <Title level="H2" text="신상"/>
                            </HBox>
                            <grid:CSSGrid items="{path: '/employee/base/extinfo2'}" gridTemplateColumns="1fr 3fr 1fr 3fr" gridGap="8px">
                                <Label text="{data}"/>
                            </grid:CSSGrid>
                        </VBox>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </Page>
</mvc:View>
<mvc:View
	controllerName="pub.pubsample.controller.Worklist"
	xmlns="sap.m"
	xmlns:table="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page showHeader="false">
		<content>
			<VBox>
				<items>
					<HBox justifyContent="SpaceBetween">
						<items>
							<HBox>
								<items>
									<Text text="복리후생 > 경조금"/>
								</items>
							</HBox>
							<HBox>
								<items>
									<Button text="신청"/>
									<Button
										icon="sap-icon://action"
										type="Transparent"
										text="프린트"
									/>
									<Button
										icon="sap-icon://action"
										type="Transparent"
										text="도움말"
									/>
								</items>
							</HBox>
						</items>
					</HBox>
					<HBox justifyContent="SpaceBetween">
						<items>
							<HBox width="33%">
								<items>
									<Title
										level="H2"
										text="대상자 정보"
									/>
								</items>
							</HBox>
							<HBox width="33%">
								<items>
									<VBox>
										<items>
											<Title
												level="H2"
												text="나의 경조금은"
											/>
											<Text text="입사 이후 지원받은 경조금 내역입니다."/>
											<HBox>
												<items>
													<VBox>
														<items>
															<Label
																text="건수"
																design="Bold"
															/>
															<Text text="5"/>
														</items>
													</VBox>
													<VBox>
														<items>
															<Label
																text="금액"
																design="Bold"
															/>
															<Text text="500 만원"/>
														</items>
													</VBox>
												</items>
											</HBox>
											<HBox>
												<items>
													<Text text="향후 예상되는 경조사는 2021.12.31 부친 회갑 입니다."/>
												</items>
											</HBox>
										</items>
									</VBox>
								</items>
							</HBox>
							<VBox width="auto">
								<items>
									<HBox justifyContent="SpaceBetween">
										<items>
											<Title
												text="조회조건"
												level="H2"
											/>
											<Button icon="sap-icon://search"/>
										</items>
									</HBox>
									<HBox>
										<items>
											<Label
												text="신청일"
												design="Bold"
											/>
											<DateRangeSelection id="SearchDate"/>
										</items>
									</HBox>
								</items>
							</VBox>
						</items>
					</HBox>
					<HBox justifyContent="SpaceBetween">
						<items>
							<HBox>
								<items>
									<Title
										level="H3"
										text="신청내역"
									/>
									<Text text="total 12"/>
								</items>
							</HBox>
							<HBox>
								<items>
									<HBox>
										<items>
											<core:Icon src="sap-icon://circle-task-2"/>
											<Label text="전체"/>
											<core:Icon
												src="sap-icon://circle-task-2"
												color="#bdbdbd"
											/>
											<Label text="작성중"/>
											<core:Icon
												src="sap-icon://circle-task-2"
												color="#ffc107"
											/>
											<Label text="신청"/>
											<core:Icon
												src="sap-icon://circle-task-2"
												color="#28a745"
											/>
											<Label text="승인"/>
											<core:Icon
												src="sap-icon://circle-task-2"
												color="#dc3545"
											/>
											<Label text="반려"/>
											<core:Icon
												src="sap-icon://circle-task-2"
												color="#17a2b8"
											/>
											<Label text="완료"/>
										</items>
									</HBox>
									<Button text="Excel"/>
								</items>
							</HBox>
						</items>
					</HBox>
					<table:Table
						id="conguTable"
						width="100%"
						rows="{/CongList}"
						selectionMode="None"
						rowHeight="37"
						columnHeaderHeight="38"
						fixedColumnCount="7"
					>
						<!-- <table:rowSettingsTemplate>
							<table:RowSettings highlight="{ZappStatAl}" highlightText="{ZappStxtAl}"/>
						</table:rowSettingsTemplate> -->
						<table:columns>
							<table:Column width="50px">
								<Label text="No."/>
								<table:template>
									<Text
										text="{No}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="100px">
								<Label text="상태"/>
								<table:template>
									<Text
										text="{ZappStxtAl}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="100px">
								<Label text="사번"/>
								<table:template>
									<Text
										text="{Pernr}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="80px">
								<Label text="성명"/>
								<table:template>
									<Text
										text="{Ename}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="100px">
								<Label text="직급명칭"/>
								<table:template>
									<Text
										text="{Zzjikgbt}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="100px">
								<Label text="소속부서"/>
								<table:template>
									<Text
										text="{Orgtx}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="100px">
								<Label text="지원대상"/>
								<table:template>
									<Text
										text="{Zname}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="80px">
								<Label text="관계"/>
								<table:template>
									<Text
										text="{Famtx}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="100px">
								<Label text="경조구분"/>
								<table:template>
									<Text
										text="{Context}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="150px">
								<Label text="경조사유"/>
								<table:template>
									<Text
										text="{Conretx}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="100px">
								<Label text="경조일"/>
								<table:template>
									<Text
										text="{
											path: 'Conddate',
											type: 'sap.ui.model.type.Date'
										}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="100px">
								<Label text="실제경조일"/>
								<table:template>
									<Text
										text="{
											path: 'Conrdate',
											type: 'sap.ui.model.type.Date'
										}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="지급금액"/>
								<table:template>
									<Text
										text="{ZpayBetT}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="50px">
								<Label text="증빙"/>
								<table:template>
									<Text
										text="{Docynt}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="신청일"/>
								<table:template>
									<Text
										text="{
											path: 'Appda',
											type: 'sap.ui.model.type.Date'
										}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="결재일"/>
								<table:template>
									<Text
										text="{
											path: 'Sgnda',
											type: 'sap.ui.model.type.Date'
										}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="지급일"/>
								<table:template>
									<Text
										text="{
											path: 'Paydt',
											type: 'sap.ui.model.type.Date'
										}"
										wrapping="false"
									/>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</items>
			</VBox>
		</content>
	</Page>
</mvc:View>
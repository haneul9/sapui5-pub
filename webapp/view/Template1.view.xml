<mvc:View
	controllerName="pub.pubsample.controller.Template1"
	xmlns="sap.m"
	xmlns:table="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
>
	<Page showHeader="false">
		<VBox>
			<HBox justifyContent="SpaceBetween">
				<HBox>
					<Text text="복리후생 > 경조금"/>
				</HBox>
				<HBox>
					<Button
						type="Emphasized"
						text="신청"
					/>
					<Button
						type="Transparent"
						icon="sap-icon://print"
						text="프린트"
					/>
					<Button
						type="Transparent"
						icon="sap-icon://sys-help"
						text="도움말"
					/>
				</HBox>
			</HBox>
			<HBox justifyContent="SpaceAround">
				<VBox
					class="hCardBox"
					width="33%"
				>
					<HBox justifyContent="SpaceBetween">
						<HBox justifyContent="Start">
							<Title
								level="H2"
								text="대상자 정보"
							/>
						</HBox>
						<Button
							type="Transparent"
							icon="sap-icon://employee-approvals"
						/>
					</HBox>
					<HBox>
						<VBox
							width="30%"
							justifyContent="Center"
							alignItems="Center"
						>
							<Image
								src="https://i1.wp.com/jejuhydrofarms.com/wp-content/uploads/2020/05/blank-profile-picture-973460_1280.png?ssl=1"
								height="50px"
								width="50px"
							/>
						</VBox>
						<VBox>
							<Text
								text="홍길동 팀장"
								textAlign="Begin"
								textDirection="Inherit"
								width=""
								wrapping="true"
								wrappingType="Normal"
							/>
							<Text
								text="예스코홀딩스 인사기획팀"
								textAlign="Begin"
								textDirection="Inherit"
								width=""
								wrapping="true"
								wrappingType="Normal"
							/>
							<Text
								text="경영관리직 / 12345"
								textAlign="Begin"
								textDirection="Inherit"
								width=""
								wrapping="true"
								wrappingType="Normal"
							/>
						</VBox>
					</HBox>
				</VBox>
				<VBox
					class="hCardBox"
					width="33%"
				>
					<Title
						level="H2"
						text="나의 경조금은"
					/>
					<Text text="입사 이후 지원받은 경조금 내역입니다."/>
					<HBox>
						<VBox width="30%">
							<Label
								text="건수"
								design="Bold"
							/>
							<ObjectStatus
								text="5"
								state="Indication02"
							/>
						</VBox>
						<VBox>
							<Label
								text="금액"
								design="Bold"
							/>
							<ObjectStatus
								text="500"
								state="Indication02"
							/>
						</VBox>
					</HBox>
					<HBox>
						<Text text="향후 예상되는 경조사는"/>
						<ObjectStatus
							text="2021.12.31 부친 회갑"
							state="Indication05"
						/>
						<Text text="입니다."/>
					</HBox>
				</VBox>
				<VBox
					class="hCardBox"
					width="33%"
				>
					<HBox justifyContent="SpaceBetween">
						<Title
							text="조회조건"
							level="H2"
						/>
						<Button
							type="Transparent"
							icon="sap-icon://search"
						/>
					</HBox>
					<grid:CSSGrid
						gridTemplateColumns="1fr 3fr"
						gridGap="8px"
					>
						<Label
							text="신청일"
							design="Bold"
						/>
						<DateRangeSelection
							width="90%"
							class="sapIcon_Date"
						/>
						<Label
							text="진행상태"
							design="Bold"
							labelFor="secondCondition"
						/>
						<Select
							width="90%"
							items="{
								path: '/ProductCollection',
								sorter: {
									path: 'text'
								},
								templateShareable: true
							}"
						>
							<core:Item
								key="{ProductId}"
								text="{Name}"
							/>
						</Select>
					</grid:CSSGrid>
				</VBox>
			</HBox>
			<VBox class="vCardBox">
				<HBox justifyContent="SpaceBetween">
					<HBox>
						<Title
							level="H3"
							text="신청내역"
						/>
						<Text text="total 12"/>
					</HBox>
					<HBox>
						<HBox>
							<core:Icon
								src="sap-icon://circle-task-2"
								color="#bdbdbd"
							/>
							<Label text="작성중 12"/>
							<core:Icon
								src="sap-icon://circle-task-2"
								color="#ffc107"
							/>
							<Label text="신청 3"/>
							<core:Icon
								src="sap-icon://circle-task-2"
								color="#28a745"
							/>
							<Label text="승인 5"/>
							<core:Icon
								src="sap-icon://circle-task-2"
								color="#dc3545"
							/>
							<Label text="반려 6"/>
							<core:Icon
								src="sap-icon://circle-task-2"
								color="#1d85c8"
							/>
							<Label text="완료 4"/>
						</HBox>
						<Button
							icon="sap-icon://excel-attachment"
							text="Excel"
						/>
					</HBox>
				</HBox>
				<table:Table
					id="conguTable"
					width="100%"
					rows="{/CongList}"
					selectionMode="MultiToggle"
					rowHeight="37"
					columnHeaderHeight="38"
				>
					<table:rowSettingsTemplate>
						<table:RowSettings highlight="{
							path: 'ZappSAl',
							formatter: '.formatter.rowHighlight'
						}"/>
					</table:rowSettingsTemplate>
					<table:columns>
						<table:Column width="13%">
							<Label text="상태"/>
							<table:template>
								<Text
									text="{ZappStxtAl}"
									width="100%"
									textAlign="Center"
								>
									<customData>
										<core:CustomData
											key="status"
											value="{ZappSAl}"
											writeToDom="true"
										/>
									</customData>
								</Text>
							</table:template>
						</table:Column>
						<table:Column width="13%">
							<Label text="성명"/>
							<table:template>
								<Text
									text="{Ename}"
									width="100%"
									textAlign="Center"
									wrapping="false"
									class="tableRow_Text"
								/>
							</table:template>
						</table:Column>
						<table:Column width="13%">
							<Label text="직급"/>
							<table:template>
								<Text
									text="{Zzjikgbt}"
									width="100%"
									textAlign="Center"
									wrapping="false"
									class="tableRow_Text"
								/>
							</table:template>
						</table:Column>
						<table:Column width="13%">
							<Label text="소속부서"/>
							<table:template>
								<Text
									text="{Orgtx}"
									width="100%"
									textAlign="Center"
									wrapping="false"
									class="tableRow_Text"
								/>
							</table:template>
						</table:Column>
						<table:Column width="13%">
							<Label text="경조구분"/>
							<table:template>
								<Text
									text="{Context}"
									width="100%"
									textAlign="Center"
									wrapping="false"
									class="tableRow_Text"
								/>
							</table:template>
						</table:Column>
						<table:Column width="13%">
							<Label text="관계"/>
							<table:template>
								<Text
									text="{Famtx}"
									width="100%"
									textAlign="Center"
									wrapping="false"
									class="tableRow_Text"
								/>
							</table:template>
						</table:Column>
						<table:Column width="13%">
							<Label text="경조일"/>
							<table:template>
								<Text
									text="{Conddate}"
									width="100%"
									textAlign="Center"
									wrapping="false"
									class="tableRow_Text"
								/>
							</table:template>
						</table:Column>
						<table:Column width="13%">
							<Label
								text="지급금액"
								width="100%"
								textAlign="End"
							/>
							<table:template>
								<Text
									text="{ZpayBetT}"
									width="100%"
									textAlign="End"
									wrapping="false"
									class="tableRow_Text"
								/>
							</table:template>
						</table:Column>
						<table:Column>
							<Label text="증빙"/>
							<table:template>
								<Button
									type="Transparent"
									icon="sap-icon://edit"
								/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</VBox>
		</VBox>
	</Page>
</mvc:View>